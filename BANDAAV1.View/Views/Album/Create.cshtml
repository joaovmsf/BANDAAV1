@model BANDAAV1.Model.Tbalbum

@{
    ViewData["Title"] = "Incluir";
}

<h1>Incluir Album</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BandaId" class="control-label"></label>
                <select asp-for="BandaId" class ="form-control" asp-items="ViewBag.BandaId"></select>
            </div>
            <div class="form-group">
                <label asp-for="AlbumNome" class="control-label"></label>
                <input asp-for="AlbumNome" class="form-control" />
                <span asp-validation-for="AlbumNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista de Albuns</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
